@page
@model _20880012_DoAn_KTLT.Pages.TonkhoModel
@using _20880012_DoAn_KTLT.Entities
@{
    Layout = "_LayoutTK";

}
<form method="POST">
    <select name="mamh" required>
        <option value="" selected>Chọn mặt hàng</option>
        @foreach (Tonkho t in Model.DSTK)
        {
            Model.MatHang = "Error";
            foreach (Mathang m in Model.DSMH)
            {
                if (m.MaMatHang == t.MaMH)
                {
                    Model.MatHang = m.TenMatHang + " (" + m.MaMatHang + ")";
                }
            }
            <option value="@t.MaMH">@Model.MatHang</option>
        }
    </select>
    <input type="submit" value="Lọc tồn kho"  class="btn btn-primary"/>
    <a href="Thongketonkho" role="button" class="btn btn-primary">Xem Tất Cả</a>
</form>

<br />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tên mặt hàng</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Tonkho t in Model.DSTK)
            {
                if (Model.MaMH == null || t.MaMH == Model.MaMH)
            {
                <tr>
                    @{
                        Model.MatHang = "Error";
                        foreach (Mathang m in Model.DSMH)
                        {
                            if (m.MaMatHang == t.MaMH)
                            {
                                Model.MatHang = m.TenMatHang + " (" + m.MaMatHang + ")";
                            }
                        }
                    }
                    <td>@Model.MatHang</td>
                    <td>@t.SL</td>
                </tr>
            }
        }
    </tbody>
</table>