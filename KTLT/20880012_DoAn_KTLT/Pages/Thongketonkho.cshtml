@page
@model _20880012_DoAn_KTLT.Pages.TonkhoModel
@using _20880012_DoAn_KTLT.Entities
@{
    Layout = "_LayoutTK";
}
<form method="POST">
    <label for="malh">Chon Mat hang:</label>
    <select name="malh">
        <option value="" selected>Xem tat ca</option>
        @foreach (Loaihang l in Model.DSLH)
        {
            var LoaiHang = l.TenLoaiHang + " (" + l.MaLoaiHang + ")";
            <option value = "@l.MaLoaiHang">@LoaiHang</option>
        }
    </select>
    <input type="submit" value="Lọc tồn kho"/>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tên loai hàng</th>
            <th>Số lượng ton</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TonkhoLH t in Model.DSTK)
            {
                <tr>
                    <td>@t.TenLH</td>
                    <td>@t.SL</td>
                </tr>
            }
    </tbody>
</table>