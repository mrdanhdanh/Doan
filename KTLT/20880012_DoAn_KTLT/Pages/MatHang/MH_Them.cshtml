    Layout = "_LayoutMH";
}

<form method="POST">
    <label for="mamh">Mã mặt hàng:</label><br />
    <input type="text" name="mamh" value="" required/><br />
    <label for="tenmh">Tên mặt hàng:</label><br />
    <input type="text" name="tenmh" value="" required/><br />
