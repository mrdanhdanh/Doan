@page
@model _20880012_DoAn_KTLT.Pages.ThongkehangcuModel
@using _20880012_DoAn_KTLT.Entities
@{
    Layout = "_LayoutTK";
}
<form method="POST">
    <label for="mamh">Chọn mặt hàng:</label>
    <select name="mamh">
        <option value="" selected>Xem tất cả</option>
        @foreach (TonkhoMH t in Model.DSTK)
        {
            string MatHang = "Error";
            var target = Model.DSMH.FirstOrDefault(m => m.MaMatHang == t.MaMH);
            if (target != null)
            {
                MatHang = target.TenMatHang + " (" + target.MaMatHang + ")";
            }
            <option value="@t.MaMH">@MatHang</option>
        }

    </select>
    <input type="submit" value="Lọc tồn kho" />
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tên mat hàng</th>
            <th>Số lượng tồn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TonkhoMH t in Model.DSTK)
        {
            string MatHang = "Error";
            var target = Model.DSMH.FirstOrDefault(m => m.MaMatHang == t.MaMH);
            if (target != null)
            {
                MatHang = target.TenMatHang + " (" + target.MaMatHang + ")";
            }
            <tr>
                <td>@MatHang</td>
                <td>@t.SL</td>
            </tr>
        }
    </tbody>
</table>